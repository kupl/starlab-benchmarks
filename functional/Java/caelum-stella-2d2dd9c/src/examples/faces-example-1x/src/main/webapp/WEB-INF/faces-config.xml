<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd "
              version="1.2">

  <application>
    <message-bundle>messages</message-bundle>
    <view-handler>com.sun.facelets.FaceletViewHandler</view-handler>
  </application>

  <managed-bean>
    <managed-bean-name>UsuarioBean</managed-bean-name>
    <managed-bean-class>br.com.caelum.stella.faces.example.UsuarioBean</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>
  
  <managed-bean>
    <managed-bean-name>EmpresaBean</managed-bean-name>
    <managed-bean-class>br.com.caelum.stella.faces.example.EmpresaBean</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>
  
</faces-config>

<?xml version="1.0" encoding="UTF-8"?>
<facelet-taglib xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facelettaglibrary_2_0.xsd"
	version="2.0">
	<namespace>http://stella.caelum.com.br/faces2</namespace>

	<tag>
		<tag-name>inputCPF</tag-name>
		<component>
			<component-type>br.com.caelum.stella.faces.component.InputCPF</component-type>
			<renderer-type>br.com.caelum.stella.faces.component.MaskedInputRenderer</renderer-type>
		</component>
		<attribute>
			<name>masked</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
		</attribute>
	</tag>

	<tag>
		<tag-name>inputCNPJ</tag-name>
		<source>inputCNPJ.xhtml</source>
	</tag>

	<tag>
		<tag-name>validateCPF</tag-name>
		<validator>
			<validator-id>StellaCPFValidator</validator-id>
			<handler-class>javax.faces.view.facelets.ValidatorHandler</handler-class>
		</validator>
	</tag>

	<tag>
		<tag-name>validateIE</tag-name>
		<validator>
			<validator-id>StellaIEValidator</validator-id>
			<handler-class>javax.faces.view.facelets.ValidatorHandler</handler-class>
		</validator>
	</tag>

	<tag>
		<tag-name>validateCNPJ</tag-name>
		<validator>
			<validator-id>StellaCNPJValidator</validator-id>
			<handler-class>javax.faces.view.facelets.ValidatorHandler</handler-class>
		</validator>
	</tag>

	<tag>
		<tag-name>validateTituloEleitoral</tag-name>
		<validator>
			<validator-id>StellaTituloEleitoralValidator</validator-id>
			<handler-class>javax.faces.view.facelets.ValidatorHandler</handler-class>
		</validator>
	</tag>

	<tag>
		<tag-name>validateNIT</tag-name>
		<validator>
			<validator-id>StellaNITValidator</validator-id>
			<handler-class>javax.faces.view.facelets.ValidatorHandler</handler-class>
		</validator>
	</tag>

	<tag>
		<tag-name>inputCNPJ</tag-name>
		<source>inputCNPJ.xhtml</source>
	</tag>

</facelet-taglib>


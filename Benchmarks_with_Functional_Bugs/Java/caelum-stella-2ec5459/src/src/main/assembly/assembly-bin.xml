<assembly xmlns="http://maven.apache.org/POM/4.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                http://maven.apache.org/xsd/assembly-1.1.0-SNAPSHOT.xsd">
  <id>bin</id>
  <formats>
    <format>zip</format>
    <format>tar.gz</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>${basedir}/stella-distribution/target/site</directory>
      <outputDirectory>docs/site</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${basedir}/stella-core/target/apidocs</directory>
      <outputDirectory>docs/api/stella-core</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${basedir}/stella-boleto/target/apidocs</directory>
      <outputDirectory>docs/api/stella-boleto</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${basedir}/stella-faces/target/apidocs</directory>
      <outputDirectory>docs/api/stella-faces</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${basedir}/stella-hibernate-validator/target/apidocs</directory>
      <outputDirectory>docs/api/stella-hibernate-validator</outputDirectory>
    </fileSet>
  </fileSets>
  <moduleSets>
    <moduleSet>
      <includes>
        <include>br.com.caelum.stella:caelum-stella-core:*</include>
      </includes>
      <binaries>
        <outputDirectory>stella-core</outputDirectory>
        <unpack>false</unpack>
      </binaries>
    </moduleSet>
    <moduleSet>
      <includes>
        <include>br.com.caelum.stella:caelum-stella-boleto:*</include>
      </includes>
      <binaries>
        <outputDirectory>stella-boleto</outputDirectory>
        <unpack>false</unpack>
      </binaries>
    </moduleSet>
    <moduleSet>
      <includes>
        <include>br.com.caelum.stella:caelum-stella-faces:*</include>
      </includes>
      <binaries>
        <excludes>
          <exclude>com.sun.facelets:jsf-facelets</exclude>
        </excludes>
        <outputDirectory>stella-faces</outputDirectory>
        <unpack>false</unpack>
      </binaries>
    </moduleSet>
    <moduleSet>
      <includes>
        <include>br.com.caelum.stella:caelum-stella-hibernate-validator:*</include>
      </includes>
      <binaries>
        <excludes>
          <exclude>org.hibernate:hibernate-validator</exclude>
        </excludes>
        <outputDirectory>stella-hibernate-validator</outputDirectory>
        <unpack>false</unpack>
      </binaries>
    </moduleSet>
    <moduleSet>
      <includes>
        <include>br.com.caelum.stella:boleto-example</include>
        <include>br.com.caelum.stella:core-example</include>
        <include>br.com.caelum.stella:faces-example</include>
        <include>br.com.caelum.stella:hibernate-persistence-example</include>
        <include>br.com.caelum.stella:hibernate-seam-example</include>
        <include>br.com.caelum.stella:vraptor-validator-example</include>
      </includes>
      <sources>
        <fileSets>
          <fileSet>
            <excludes>
              <exclude>target/**</exclude>
              <exclude>**/.svn</exclude>
              <exclude>**/.project</exclude>
              <exclude>**/.classpath</exclude>
              <exclude>**/*.iml</exclude>
              <exclude>**/*.ipr</exclude>
              <exclude>**/*.iws</exclude>
            </excludes>
          </fileSet>
        </fileSets>
        <outputDirectoryMapping>examples/${module.artifactId}</outputDirectoryMapping>
      </sources>
    </moduleSet>
  </moduleSets>
</assembly>
